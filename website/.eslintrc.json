{
    "extends": [
        "@apify/eslint-config-ts",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
        "project": "./tsconfig.eslint.json",
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020
    },
    "env": {
        "browser": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "root": true,
    "rules": {
        "quote-props": ["error", "consistent"],
        "react/prop-types": ["off"]
    }
}
